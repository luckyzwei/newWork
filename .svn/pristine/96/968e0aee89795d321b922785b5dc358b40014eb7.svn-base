        <script type="text/javascript">
            (function(){
                $('input:radio[name="ad_type"]').click(function(){
                    var type = $('input[name="ad_type"]:checked').val();
                    if(type == '2'){
                        $('#upfile').show();
                        $('#video_url').hide();
                        $('#content').hide();
                    }else if(type == '3'){
                        $('#upfile').hide();
                        $('#video_url').show();
                        $('#content').hide();
                    }else{
                        $('#upfile').hide();
                        $('#video_url').hide();
                        $('#content').show();
                    }
                });
            })()
