/* // 特殊商品列表 为广告位而添加 */

page {
  height: 100%;
}

.product-list {
  width: 100%;
  margin: 0 auto;
}

.product-list .pList-nav {
  margin: 0 auto 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: fixed;
  width: 100%;
  background: #fff;
  z-index: 999;
  padding: 15rpx 0;
}

/* 左右分类 列表 */

.product-list .pList-nav .nav-tabList {
  width: 15%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  color: #888;
  font-size: 24rpx;
}

.product-list .pList-nav .nav-tabList  .listIcon {
  width: 50rpx;
  height: 50rpx;
}

/* 商品列表搜索框 */

.product-list .pList-nav .nav-search {
  width: 70%;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 10rpx;
}

.product-list .pList-nav .nav-search input {
  width: 100%;
  text-align: center;
  height: 66rpx;
  line-height: 66rpx;
}

/* tabbar 切换 */

.goods-tab-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-top: 104rpx;
}

.goods-tab-nav {
  width: 25%;
  height: 90rpx;
  line-height: 90rpx;
  color: #888;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

/* tab激活样式 */

.goods-tab-nav.on {
  color: #ff8284;
}

/* 价格搜索箭头 */

.goods-tab-nav .priceIcon {
  width: 32rpx;
  height: 40rpx;
  margin-left: 4rpx;
}

/* 筛选图标 */

.goods-tab-nav .screenIcon {
  width: 25rpx;
  height: 25rpx;
  padding-top: 8rpx;
}

/* 回顶部 */

.backTop {
  position: fixed;
  bottom: 25%;
  right: 15rpx;
  background: rgba(0, 0, 0, 0.6);
  width: 85rpx;
  height: 85rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.backTop-img {
  width: 50rpx;
  height: 50rpx;
}

/* 商品列表1 */

.pList-product {
  width: 94%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}

.pList-product  .product-price {
  width: 100%;
}

/* 商品列表2 */

.pList-product .pList-items {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 15rpx auto;
  font-size: 30rpx;
}

.pList-product .pList-items .items-img {
  width: 150rpx;
  height: 150rpx;
}

.pList-product .pList-items .items-info {
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 15rpx;
}

.pList-product .pList-items .items-info .product-price {
  margin-top: 35rpx;
  width: 100%;
}

.pList-product .pList-items .items-info .info-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: left;
}

.pList-product .pList-items .items-info .cart1 {
  width: 36rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

/* 顶部分类菜单 */

.pList-menuLeft {
  position: fixed;
  z-index: 9999;
  left: 0rpx;
  top: 0;
  width: 265rpx;
  height: 100%;
  background: #fff;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

/* 渐进滑入菜单分类 */

.menuLeft-cate {
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.menuLeft-cate .cate-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 44rpx 0 20rpx 0;
  font-weight: 600;
  -moz-box-shadow: 0px 2px 5px #efefef;
  -webkit-box-shadow: 0px 2px 5px #efefef;
  box-shadow: 0px 2px 5px #efefef;
}

.menuLeft-cate .spec-font {
  font-size: 29rpx;
}

.menuLeft-cate .cate-cont {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #ccc;
}

/* 购买数量 */

.product-acount {
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 35rpx;
  margin-left: 20rpx;
}

.global-product {
  position: relative;
}

/* 商品列表1显示秒杀图标 */

.timeLimit1 {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
}

/* 商品列表2秒杀图标 */

.timeLimit2 {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
}
/* 显示秒杀字样 */
.limit-txt{
  font-size: 28rpx;
}