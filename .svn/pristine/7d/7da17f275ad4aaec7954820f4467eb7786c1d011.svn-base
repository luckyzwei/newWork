/* 订单状态列表页*/

page {
  min-height: 100%;
}

.empty {
  height: 100%;
  width: 100%;
  padding: 50% 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 22rpx;
}

.empty image {
  width: 220rpx;
  height: 220rpx;
}

/*非空订单 */

.order-list {
  width: 94%;
  margin: 0 auto;
  padding: 8rpx 3%;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.order-list   .header-sn {
  color: #888;
}

.nav-right {
  width: 12px;
  height: 10px;
  position: absolute;
  left: 95%;
}

.order-list  .item-footer {
  padding-right: 12rpx;
  background-color: #fff;
}

.order-list .item-footer .footer-sum {
  position: relative;
  display: block;
  height: 38px;
  overflow: hidden;
  font-size: 14px;
  font-weight: normal;
  text-align: right;
  line-height: 38px;
  clear: both;
}

/* 物流弹层样式 */

.drawer_box {
  width: 600rpx;
  position: fixed;
  top: 45%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 75rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.drawer_info {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 15rpx 0;
}

/*关闭按钮大小 */

.drawer_info image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 23rpx;
}

.drawer_content {
  width: 100%;
  padding: 6rpx 30rpx;
}

/* 物流标题 */

.drawer_content .drawer_title {
  color: black;
  font-size: 35rpx;
  font-weight: 650;
}

.drawer_content .drawer_txt {
  color: gray;
}

/* 物流提示信息 */

.drawer_box .waring {
  background: #e6e6e9;
  padding: 13rpx 35rpx;
  color: #ff8284;
  font-size: 25rpx;
}

/* 上下可滚动 */

.drawer_box scroll-view {
  width: 100%;
  height: 450rpx;
  padding: 10rpx 35rpx;
  color: gray;
}

.drawer_box scroll-view .wuliu-info {
  width: 95%;
  display: flex;
  flex-direction: column;
}

/* 物流 end */

/* 商品合计 */

.order-list .sum {
  color: #333;
  font-size: 13px;
  font-weight: normal;
}

/* 对商品进行操作 */

.footer-button {
  padding: 0rpx 15rpx;
  height: 45rpx;
  color: white;
  font-size: 24rpx;
  font-weight: normal;
  text-align: center;
  line-height: 45rpx;
  margin-left: 10rpx;
  border-radius: 6px;
}

/* 商品合计 */

.item-footer-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-bottom: 15rpx;
}

/*加载完毕  */

.allLoading {
  text-align: center;
  padding: 20rpx 0;
  font-size: 22rpx;
  color: #888;
}

/* 商品列表1 */

.product-price {
  width: 100%;
}

.order-items {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 20rpx auto 0rpx auto;
}

.order-items .items-img {
  width: 150rpx;
  height: 150rpx;
}

.order-items .items-info {
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 15rpx;
}

.order-items .items-info .product-price {
  margin-top: 35rpx;
  width: 100%;
}

.order-items .items-info .info-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: left;
}

.order-items .items-info .cart1 {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}

.product-acount {
  color: #888;
}

/* 订单状态 */

.header-status {
  font-size: 25rpx;
}
