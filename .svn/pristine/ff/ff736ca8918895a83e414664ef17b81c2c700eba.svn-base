<!--商品分类页-->
<!--主盒子-->
<view class="container global-pageFont category">
  <!--左侧栏-->
  <view class="nav_left">
    <block wx:for="{{cateItems}}" wx:key="id">
      <view class="nav_left_items {{curNav ==index ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{item.category_id}}">{{item.name}}</view>
    </block>
  </view>
  <!--右侧栏-->
  <view class="nav_right">
    <view class="category-title">全部{{cateItems[curIndex].name}}</view>
    <view wx:if="{{cateItems[curIndex].ishaveChild}}">
      <block wx:for="{{cateItems[curIndex].categorylist}}" wx:key="id">
        <view class="nav_right_items" bindtap="productList" data-child_id="{{item.category_id}}">
          <image src="{{item.image}}"></image>
          <text>{{item.name}}</text>
        </view>
      </block>
    </view>
    <!--无数据-->
    <view class="nodata_text" wx:else>该分类暂无数据</view>
  </view>
</view>