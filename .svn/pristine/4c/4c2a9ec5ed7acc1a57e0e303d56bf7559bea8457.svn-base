/* 会员等级进度条 */

.vip-level {
  position: relative;
  width: 92%;
  margin: 3rpx auto 0 auto;
  padding: 4rpx 0;
}

/* 进度条  必须给出width */

.vip-level progress {
  width: 100%;
  border-radius: 15px;
  border: 1px solid #ad8a54;
}

/* 进度条底部数字积分 */

.vip-level .score {
  font-size: 22rpx;
  color: #fff;
  text-align: center;
}

/* 3部分平分 */

.vip-level .score text {
  display: block;
  width: 33.3%;
}

/* 左边文字距左边现实 */

.vip-level .score .score_left {
  text-align: left;
}

/* 右边居右显示 */

.vip-level .score .score_right {
  text-align: right;
}

/* 等级图标 */

.level {
  margin-top: 9rpx;
}

.level-icon {
  width: 35rpx;
  height: 35rpx;
}

/* 左边图标 */

.icon_left {
  float: left;
}

.icon_right {
  float: right;
}
