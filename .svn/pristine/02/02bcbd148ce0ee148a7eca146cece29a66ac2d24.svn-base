class GroupOrder extends CI_Model {

    //put your code here
    public function getGroupLits($group_produt_id = '', $page = 1, $limit = 2) {
        $this->db->select('ug.*,uw.wx_headimg')
                ->from('user_groupby ug')
                ->join('user_wechat uw','uw.user_id = ug.user_id')
                ->where('ug.group_in_num>0');
        if (!empty($group_produt_id)) {
            $this->db->where('ug.group_produt_id', $group_produt_id);
        }
        $query = $this->db
                ->group_by('ug.groupbuy_sn')
                ->order_by('ug.createtime', 'asc')
                ->limit($limit, ($page - 1) * $limit)
                ->get();
        return $query->result_array();
    }

}
