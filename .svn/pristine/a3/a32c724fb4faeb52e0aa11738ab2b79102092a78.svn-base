/* 订单确认页 */

.checkout {
  width: 100%;
  background: #f8f8f8;
}

/* 地址选择 */

.checkout  .confirm-address {
  display: flex;
  flex-direction: row;
  justify-content: start;
  justify-items: center;
  width: 100%;
  background-color: #fff;
  padding: 15rpx 0;
}

/* 收货地址*/

.checkout  .confirm-address .address-icon {
  width: 15%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.checkout  .confirm-address .address-rightIcon {
  width: 5%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* 收货地址 图标  */

.confirm-address .address-icon .address-iconImg {
  width: 35rpx;
  height: 35rpx;
}

/* 地址 手机号 姓名显示 */

.confirm-address .address-show {
  width: 78%;
}

.confirm-address .address-contact {
  width: 100%;
  padding: 15rpx 34rpx 10rpx 15rpx;
}

.confirm-address .address-detail {
  width: 100%;
  padding: 0 34rpx 15rpx 15rpx;
}

.confirm-address .address-create {
  width: 82%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-weight: normal;
  text-align: left;
}

.confirm-goods {
  width: 100%;
  background-color: #fff;
  margin-top: 15rpx;
  font-size: 25rpx;
}

.checkout .confirm-goods .goods-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 96%;
  margin: 0 auto;
  background-color: #fff;
  border-bottom: #f8f8f8 1px solid;
  padding: 15rpx 0;
}

.checkout .confirm-goods .goods-item .item-img {
  display: flex;
  width: 80rpx;
  height: 80rpx;
  border: #e2e2e2 1px solid;
}

.checkout .confirm-goods .goods-item .item-info {
  width: 84%;
  margin-left: 20rpx;
  overflow: hidden;
}

.checkout .confirm-goods .goods-item .item-info .info-name {
  width: 100%;
  font-weight: normal;
  text-align: left;
}

.confirm-goods .goods-item .item-info .info-attr {
  width: 100%;
  margin-top: 10rpx;
  font-size: 25rpx;
  font-weight: normal;
  text-align: left;
}

.confirm-goods .goods-item .item-info .info-price {
  font-weight: normal;
  text-align: left;
  margin: 8rpx 0;
}

.confirm-goods .goods-item .item-info .info-price .product-number {
  font-size: 24rpx;
}

.confirm-form {
  width: 100%;
  background-color: #fff;
  margin-top: 15rpx;
}

.confirm-form .form-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background: #fff;
  border-bottom: 15rpx solid #f8f8f8;
}

.confirm-form .form-item .global-rightImg {
  margin-right: 22rpx;
}

.confirm-form .form-item .item-title {
  display: flex;
  height: 88rpx;
  font-weight: normal;
  text-align: left;
  line-height: 88rpx;
  padding-left: 20rpx;
}

.confirm-form .form-item .item-value {
  width: 75%;
  height: 88rpx;
  font-weight: normal;
  line-height: 88rpx;
  padding-left: 17rpx;
  text-align: left;
}

.confirm-summury {
  width: 100%;
  margin-top: 10rpx;
}

.confirm-summury .summury-total {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 55rpx;
  line-height: 55rpx;
  padding-left: 16rpx;
}

.confirm-summury .summury-total .total-price {
  height: 68rpx;
  font-weight: bold;
  line-height: 68rpx;
  padding-right: 16rpx;
}

.confirm-summury .summury-detail {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 55rpx;
  line-height: 55rpx;
  padding-left: 16rpx;
}

.confirm-summury .summury-detail .total-price {
  height: 40rpx;
  font-size: 24rpx;
  font-weight: normal;
  line-height: 40px;
  padding-right: 8px;
}
.confirm-summury .summury-detail .jifen{
  font-size: 24rpx;
}
.confirm-submit {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  border-top: #f8f8f8 1rpx solid;
  background-color: #fff;
}

.confirm-submit .submit-total {
  width: 70%;
  height: 100%;
  font-weight: normal;
  line-height: 88rpx;
  background-color: #fff;
  padding-right: 16rpx;
  text-align: left;
  border-top: 1px solid #f8f8f8;
}

.confirm-submit .submit-total .total-price {
  font-weight: bold;
  text-align: left;
  line-height: 88rpx;
  padding-left: 20rpx;
}

.confirm-submit .submit-button {
  width: 30%;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
}

/* 商家留言 */

.textarea {
  width: 100%;
  margin: 20rpx auto;
}

.text-textarea {
  width: 96%;
  height: 260rpx;
  margin: 0 auto;
}

.text-textarea textarea {
  width: 98%;
  height: 100rpx;
  padding: 10rpx;
  background: #f8f8f8;
}

/* 优惠券样式 */

.cashgift-list {
  position: relative;
  width: 98%;
  margin: 10rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.cashgift-list .list-item {
  width: 67%;
  border-right: 1px dashed #eee;
  background-color: #fff;
  overflow: hidden;
  position: absolute;
}

.cashgift-list .list-item.readonly .item-info {
  /* padding-left: 28rpx; */
}

.cashgift-list .list-item .item-info .info-expires {
  font-weight: normal;
  text-align: left;
}

.cashgift-list .list-item .item-value {
  height: 50rpx;
  display: block;
  color: #ff8184;
  font-size: 35rpx;
  font-weight: normal;
  line-height: 62rpx;
}

.cashgift-list .list-item .item-value  span {
  font-size: 50rpx;
}

.cashgift-list button {
  height: 60rpx;
  text-align: center;
  margin: auto;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: white;
  position: absolute;
  right: 109rpx;
}

/* 优惠券背景样式 */

.couponBg {
  position: absolute;
  z-index: 0;
  width: 96%;
  margin: 0 auto;
  height: 180rpx;
  border-radius: 5px;
}

/* 拼团列表 */

.checkout-tuan {
  position: relative;
  width: 96%;
  margin: 15rpx auto 0 auto;
  padding: 25rpx 2%;
  background: #fff;
}

/* 头像盛放包过 */

.checkout-tuan .tuan-headimg {
  justify-content: center;
  padding: 45rpx 0 10rpx 0;
}
.tuan-leader{
  margin-right: 12rpx;
  align-items: center;
}
.checkout-tuan .tuan-headimg .headimg-member {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  border: 1px solid #aaa;
}

/* 团长 */

.is_leader {
  width: 80rpx;
  text-align: center;
  background: #ff8284;
  border-radius: 10rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  color: #fff;
  margin-top: 4rpx;
}
/* 标题展示拼购字样 */
.pin-title{
  background: #ff8284;
  padding: 1rpx 10rpx;
  border-radius: 8rpx;
  color: #fff
}
/* 成团新玩法 */
.tuan-style{
  width: 100%;
  background:#fff;
  padding: 20rpx 0;
  border-bottom: 15rpx solid #f8f8f8;
}
.tuan-style  text{
  font-size: 22rpx;
  padding: 15rpx 0 0 0;
}
.styleImg{
  width: 48rpx;
  height: 48rpx;
}
.radius{
  border-radius: 50%;
}
.style1{
  width: 33.3%;
}

checkbox-group {
  width: 60rpx;
  zoom: 0.55;
  margin-right: 40rpx;
}

/* 未选中的 背景样式 */

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
}

/* 选中后的样式  */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #ff8284;
  border-color: #ff8284;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  line-height: 55rpx;
  text-align: center;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
