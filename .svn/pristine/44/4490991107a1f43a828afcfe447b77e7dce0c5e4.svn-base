/* 商品详情页样式*/

/* 商品详情页 轮播图 */

.goodDetail {
  position: relative;
  border-bottom: 10rpx solid #f8f8f8;
}

.goodDetail-img {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  -moz-box-shadow: 0px 2px 8px #eee;
  -webkit-box-shadow: 0px 2px 8px #eee;
  box-shadow: 0px 2px 8px #eee;
}

.goodDetail-img  swiper,
.goodDetail-img swiper
.goodDetail-img swiper  swiper-item {
  width: 100%;
  height: 750rpx;
}

.goodDetail-img swiper-item image {
  height: 100%;
  width: 100%;
}

.goodDetail-img image {
  width: 100%;
  margin: 0 auto;
}

/* 商品信息样式 */

.goodDetail .goodDetail-info {
  padding: 20rpx 0;
  width: 96%;
  margin: 0 auto;
}

/* 商品标题 */

.goodDetail .goodDetail-info .product-name {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
  padding: 10rpx 0 1rpx 0;
}

.goodDetail .goodDetail-info .product-name text {
  width: 90%;
}

/* 商品简介 */

.product-explain {
  font-size: 22rpx;
}

/*商品标题右侧分享 */

.goodDetail .goodDetail-info .product-share {
  width: 10%;
  display: flex;
  flex-direction: column;
  justify-content: end;
  align-items: center;
  padding-left: 15rpx;
  border-left: 1px solid #cdcdcd;
}

.goodDetail .goodDetail-info .product-share .share-btn {
  position: absolute;
  margin: 0;
  padding: 0;
  width: 60rpx;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 22rpx;
  opacity: 0;
}

/* 底部悬浮icon */

.goodDetail .goodDetail-info .product-share .share-icon {
  width: 45rpx;
  height: 45rpx;
}

.goodDetail-info .product-specPrice {
  padding: 0 15rpx;
  text-decoration: line-through;
  font-size: 22rpx;
}

/* 商品选择数量显示 */

.guige-product {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 96%;
  margin: 0 auto;
  padding: 25rpx 2%;
  border-bottom: 10rpx solid #f8f8f8;
}

/*商品属性*/

.goodDetail-attribute {
  width: 96%;
  margin: 0 auto;
}

.goodDetail-attribute .attribute_title {
  color: black;
  font-size: 25rpx;
  padding: 20rpx 0;
}

.goodDetail-attribute .attribute text:last-child {
  padding-left: 20rpx;
}

.goodDetail-attribute .attribute_cont {
  line-height: 80rpx;
  border-bottom: 2rpx solid #dbdbdb;
}

/*底部购物车  */

.detail_footer {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border-top: 1px solid #f8f8f8;
}

.detail_footer 
.detail_icon {
  width: 14%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
}

.detail_footer 
.detail_icon image {
  width: 50rpx;
  height: 50rpx;
}

.detail_footer .buy {
  width: 220rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
}

.detail_footer .addCart {
  width: 29%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  background: #f7965e;
}

/* 底部间距防止被操作层 遮盖 */

.bottom_cover {
  width: 100%;
  height: 110rpx;
}

/* 状态提示红点*/

.detail_icon  .warning {
  margin-left: 20rpx;
  margin-top: -27rpx;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
}

/*商品详情页 客服按钮样式 */

.goodDetail-kefu {
  width: 81rpx;
  height: 81rpx;
  position: absolute;
  margin: 0;
  padding: 0;
  opacity: 0;
}

/* 商品详情/评论 */

.goodsDetail-nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: centter;
}

.goodsDetail-nav .nav-tab {
  width: 50%;
  text-align: center;
  line-height: 80rpx;
}

.goodsDetail-nav .active {
  color: #ff8284;
}

/*商品评价 start */

.goods-reviews {
  background: #fff;
  text-align: center;
}

/* .goods-reviews .evaluate {
  background-color: #fff;
  padding-bottom: 20rpx;
} */

.goods-reviews .evaluate .eva_title {
  background-color: #fff;
  display: flex;
  color: #999;
  font-size: 28rpx;
  line-height: 2;
  text-indent: 20rpx;
  border-bottom: 1px solid #e5e5e5;
}

.goods-reviews {
  border-bottom: 1px solid #e5e5e5;
  text-align: left;
}

.goods-reviews  .eva_user {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.eva_user .star {
  font-size: 28rpx;
  color: red;
  line-height: 11rpx;
  margin-left: 8rpx;
}

.eva_user .star image {
  width: 45rpx;
  height: 45rpx;
}

.eva_user .eva_iu {
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.eva_user .eva_iu image {
  width: 56rpx;
  height: 56rpx;
  border: 1px solid #f8f8f8;
  border-radius: 50%;
  margin: 20rpx 10rpx;
}

.eva_user .eva_iu text {
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.eva_detail {
  text-indent: 20rpx;
  font-size: 25rpx;
}

.eva_detail .eva_ud {
  padding: 10rpx 20rpx;
}

.eva_gattr {
  color: #ccc;
  font-size: 25rpx;
  text-indent: 20rpx;
  margin-bottom: 6rpx;
}

.eva_gattr .eva_time {
  padding-right: 30rpx;
}

/*商品评价 end */

/* 购买数量 */

.product-acount {
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 35rpx;
  margin-left: 20rpx;
}

/* 商品列表1显示秒杀图标 */

.timeLimit1 {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  z-index: 99;
}

/* 满减样式 */

.manjian {
  color: #ff8284;
}

/* 活动策略 */

.product-activity {
  width: 96%;
  padding: 25rpx 2%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  border-bottom: 10rpx solid #f8f8f8;
}

.activity-title {
  color: #999;
}

.activity-type {
  width: 70%;
  margin-left: 25rpx;
}

.manjian-items {
  color: #333;
  font-size: 25rpx;
}

/* 分享方式弹层 */

.share-modal {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding-top: 20rpx;
  text-align: center;
  z-index: 99;
}

.share-modal .share-btn {
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  background: rgba(0, 0, 0, 0);
  font-size: 24rpx;
  border-radius: 0;
}

.share1-btn {
  bottom: 5rpx;
  opacity: 0;
}

.share-modal .share-btn::after {
  border: none;
}

.share-modal .share-btn {
  border-top: 1px solid #f8f8f8;
}

/*分享赚去的钱数 */

.tips {
  font-size: 28rpx;
}

/*海报生成区  */

.poster {
  width: 100%;
  position: absolute;
  z-index: 999;
  top: 0;
}

/* 取消弹层按钮 */

.cancel {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.cancel image {
  width: 66rpx;
  height: 66rpx;
  margin-top: 10rpx;
  padding-right: 15rpx;
}

/* 海报尺寸 */

.create-post {
  width: 420rpx;
  height: 640rpx;
  margin-top: 105rpx;
}

/* 海报图片 */

.create-post .create-postImg {
  width: 420rpx;
  height: 640rpx;
  border: 1px solid #aaa;
}

/* 保存海报到相册 按钮 */

.save-post {
  text-align: center;
  margin-top: 60rpx;
  color: #fff;
  font-size: 28rpx;
}

.save-post  .save-btn {
  width: 430rpx;
  line-height: 60rpx;
  border-radius: 20rpx;
}

.global-mask {
  background: rgba(0, 0, 0, 0.8);
}

/* 提示分享 */

.save-tips {
  margin-top: 22rpx;
}
