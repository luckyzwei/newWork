/* 订单详情页*/

.orderdetail {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 90rpx;
  line-height: 90rpx;
}

/* 订单状态 */

.orderdetail-status {
  width: 96%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.orderdetail-status text {
  font-size: 30rpx;
  color: white;
  padding: 0 20rpx;
}

/* 列表icon */

.orderdetail-status  .orderdetail-icon {
  width: 65rpx;
  height: 65rpx;
}

/* 收货地址 */

.newAdress {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-top: 15rpx solid #f8f8f8;
}

/* 地址图标 */

.newAdress > image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 20rpx;
}

/* 右侧地址 / 收货人 */

.confirm-address {
  width: 90%;
  background-color: #fff;
}

.confirm-address .address-contact {
  width: 98%;
  padding: 25rpx 0 5rpx 15rpx;
}

.confirm-address .address-detail {
  width: 98%;
  padding: 0rpx 0rpx 15rpx 15rpx;
}

/* 收货地址end */

/* 配送方式 icon*/

.orderdetail-express {
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;
}

.orderdetail-express .express {
  width: 50rpx;
  height: 50rpx;
  margin-left: 17rpx;
}

.orderdetail-express  .express-right {
  width: 85%;
  padding: 15rpx 0;
}

.orderdetail-express  .express-right text {
  padding: 10rpx 0 5rpx 15rpx;
}

/* 订单信息 */

.confirm-summury {
  width: 100%;
  background-color: #fff;
  border-top: 15rpx solid #f8f8f8;
}

.confirm-summury .summury-total {
  display: block;
  height: 34px;
  overflow: hidden;
  color: #404245;
  font-size: 14px;
  font-weight: bold;
  line-height: 34px;
  padding-left: 8px;
}

.confirm-summury .summury-total .total-price {
  float: right;
  display: block;
  height: 34px;
  overflow: hidden;
  color: #404245;
  font-size: 14px;
  font-weight: bold;
  line-height: 34px;
  padding-right: 8px;
}

.confirm-summury .summury-detail {
  display: block;
  height: 26px;
  overflow: hidden;
  color: #888;
  font-size: 12px;
  font-weight: normal;
  line-height: 26px;
  padding-left: 8px;
}

/* 订单信息 */

.marginbot {
  padding-bottom: 80rpx;
}

.confirm-summury .summury-detail1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 26px;
  overflow: hidden;
  color: #888;
  font-size: 12px;
  font-weight: normal;
  line-height: 26px;
  padding-left: 8px;
}

.confirm-summury .summury-detail1  > span {
  display: block;
  width: 22%;
}

.confirm-summury .summury-detail .total-price {
  float: right;
  display: block;
  height: 20px;
  overflow: hidden;
  color: #888;
  font-size: 12px;
  font-weight: normal;
  line-height: 20px;
  padding-right: 8px;
}

.confirm-submit {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 100;
  width: 100%;
  height: 44px;
  box-sizing: border-box;
  border-top: #e2e2e2 1px solid;
  background-color: #fff;
}

.confirm-submit .submit-total {
  float: left;
  position: relative;
  display: block;
  width: 60%;
  height: 100%;
  box-sizing: border-box;
  color: #404245;
  font-size: 14px;
  font-weight: normal;
  text-align: right;
  line-height: 44px;
  background-color: #f7f7f7;
  padding-right: 8px;
}

.confirm-submit .submit-total .total-price {
  width: 100%;
  height: 24px;
  color: #404245;
  font-size: 16px;
  font-weight: normal;
  text-align: right;
  line-height: 44px;
}

/* 商品列表详情 */

.order-goods {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  background-color: #fff;
  padding: 10rpx 0rpx;
  border-top: 1px solid #f8f8f8;
}

.order-good .item-photo {
  width: 150rpx;
  height: 150rpx;
}

.order-goods .item-photo image {
  width: 150rpx;
  height: 150rpx;
  padding-left: 8px;
}

.order-goods .item-info {
  width: 76%;
  display: flex;
  flex-direction: column;
}

.order-goods  .item-info .info-name {
  width: 100%;
  margin-top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.order-goods  .item-info .info-price {
  margin-top: 10rpx;
}

/* 商品详情end */

/*底部订单状态对应按钮 */

.fixed {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding: 15rpx 0;
}

.fixed > view {
  padding: 8rpx 22rpx;
  font-size: 26rpx;
  border-radius: 6px;
  border: 1px solid #eee;
  margin-right: 15rpx;
}

.fixed >text {
  padding: 8rpx 22rpx;
  font-size: 30rpx;
  color: #ff8284;
  background: #fff;
  border-radius: 25rpx;
  border: 1rpx solid #ff8284;
  margin-right: 15rpx;
}

.color {
  color: #ff8284;
  border: 1px solid #ff8284;
}

/* 底部按钮end */

/* 物流弹出样式 */

.drawer_box {
  width: 600rpx;
  position: fixed;
  top: 45%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 75rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.drawer_info {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 15rpx 0;
}

.drawer_info image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 23rpx;
}

.drawer_content {
  width: 100%;
  padding: 6rpx 32rpx;
}

.drawer_content .drawer_title {
  color: black;
  font-size: 35rpx;
  font-weight: 650;
}

.drawer_content .drawer_txt {
  color: gray;
}

.drawer_box .waring {
  background: #e6e6e9;
  padding: 13rpx 35rpx;
  color: #ff8284;
  font-size: 25rpx;
}

.drawer_box scroll-view {
  width: 100%;
  height: 450rpx;
  padding: 10rpx 35rpx;
  color: gray;
}

.drawer_box scroll-view .wuliu-info {
  width: 95%;
  display: flex;
  flex-direction: column;
}

/* 物流 end */
