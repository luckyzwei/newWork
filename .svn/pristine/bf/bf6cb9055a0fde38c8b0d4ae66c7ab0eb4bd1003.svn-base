/*会员信息页面样式 */

.userInfo {
  width: 96%;
  margin: 0 auto;
}

.form-list {
  position: relative;
  margin-bottom: 20rpx;
}

.form-list .vip-title {
  display: block;
  width: 100%;
  line-height: 45px;
  border-bottom: 1px solid #eee;
}

.form-item {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 15rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.infoText {
  height: 60rpx;
  line-height: 60rpx;
}

.form-item-hd {
  /* width: 125rpx; */
  height: 60rpx;
  line-height: 60rpx;
}

.form-item-bd {
  flex: 1;
  height: 60rpx;
}

input, .input {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding: 0 15rpx;
}

.input-placeholder {
  color: #ccc;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  border-radius: 0PX;
}
