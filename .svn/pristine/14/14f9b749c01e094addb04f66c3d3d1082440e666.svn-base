/* 首页轮播样式 */

.index-banner {
  width: 100%;
  height: 800rpx;
}

.index-banner swiper, .index-banner swiper-item {
  width: 100%;
  height: 800rpx;
}

.index-banner  .banner-img {
  width: 100%;
  height: 800rpx;
  display: block;
}

/* 首页搜索样式 */

.index-search {
  width: 92%;
  margin: 30rpx auto;
  border-radius: 15px;
  background: #f8f8f8;
  padding: 8rpx;
  height: 52rpx;
}

.index-search input {
  width: 100%;
  font-size: 32rpx;
  text-align: center;
}

.index-search .unselectColor {
  color: #cdcdcd;
  font-size: 28rpx;
}

/* 首页商品分类 */

.index-category {
  width: 100%;
  margin: 25rpx auto;
}

.index-category .category-items {
  width: 25%;
  margin-bottom: 20rpx;
}

.index-category .category-items .items-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.index-category .category-items .items-txt {
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 首页广告位 */

.index-adv {
  width: 100%;
}

.index-adv  .index-advTop {
  margin: 15rpx 0;
}

.index-adv  .index-advTop .advTop-img {
  width: 75rpx;
  height: 75rpx;
  margin: 0 15rpx;
}

.index-adv .adv-items {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.index-adv .adv-items .items-txt {
  display: block;
  font-weight: bold;
  text-align: center;
}

.index-adv .adv-items .item-img {
  width: 100%;
  height: 350rpx;
  display: block;
}

/* 广告位关联商品 */

.adv-items-products {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background: #f8f8f8;
}

.global-title {
  font-size: 25rpx !important;
}

.global-price {
  font-size: 28rpx;
}

.global-product {
  width: 44% !important;
  margin-bottom: 1.1% !important;
  padding: 25rpx 2%;
}

.global-product:nth-child(2n-1) {
  margin-left: 1.5%;
  margin-right: 0.5%;
}

.global-product:nth-child(2n) {
  margin-left: 0.5%;
  margin-right: 1.5%;
}

.global-product .global-cart1 {
  margin-right: 4rpx;
}

/* 分享 / 客服 公共样式 */

.fixed-btn {
  position: fixed;
  right: 5rpx;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  border: 1px solid #eee;
  background: #fff;
}

.fixed-img {
  width: 35rpx;
  height: 35rpx;
}

/* 分享 /客服字体样式 */

.global-column1 text {
  font-size: 20rpx;
  color: #333;
}

/* 分享 特有样式*/

.index-share {
  bottom: 10rpx;
}

/* 客服 特有样式*/

.index-contact {
  bottom: 90rpx;
}

.contact-btn {
  bottom: 90rpx;
  opacity: 0;
}

/* 分享方式弹层 */

.mask {
  width: 100%;
  min-height: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.share-modal {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
}

.share-modal .share-btn {
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  background: rgba(0, 0, 0, 0);
  font-size: 24rpx;
  border-radius: 0;
}

.share1-btn {
  bottom: 5rpx;
  opacity: 0;
}

.share-modal .share-btn:first-child {
  border-bottom: 1px solid #eee;
}

.share-modal .share-btn::after {
  border: none;
}

/* 首页优惠券 */

/* 优惠券左右滑动 外部包裹元素 */

.index-coupon {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

/* 滑动组件 */

.index-coupon .scroll-view {
  width: 100%;
}

/* 滑动组件 子元素 */

.index-coupon .coupon-items {
  width: 560rpx;
  height: 226rpx;
  display: inline-block;
  padding: 30rpx 10rpx 25rpx 15rpx;
  position: relative;
}

/* 优惠券子元素背景图片 */

.index-coupon .coupon-items  .coupon {
  width: 550rpx;
  height: 226rpx;
  position: absolute;
  z-index: -1;
  border-radius: 10rpx;
}

/*  优惠券信息 */

.index-coupon .coupon-items .coupon-info {
  display: flex;
  flex-direction: row;
  justify-content: start;
  width: 100%;
  position: absolute;
  height: 180rpx;
  padding: 17rpx 0;
  /* margin-top: 12rpx; *//* padding: 19rpx 0 0rpx 0; */
}

.index-coupon .coupon-items .coupon-info .coupon-info-left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 44%;
  margin-left: 11%;
  border-right: 2rpx dashed #f3aaab;
  color: #ff8284;
}

.index-coupon .coupon-items .coupon-info .coupon-info-left .coupon-endtime {
  font-size: 24rpx;
  margin-left: 5rpx;
  margin-top: -10rpx;
}

.index-coupon .coupon-items .coupon-info .coupon-info-left .price-icon {
  font-size: 40rpx;
}

.index-coupon .coupon-items .coupon-info .coupon-info-left .coupon-marginTop {
  margin-top: -9rpx;
}

.index-coupon .coupon-items .coupon-info .coupon-info-left .coupon-price {
  font-size: 100rpx;
  font-weight: bold;
  letter-spacing: 8rpx;
}

.index-coupon .coupon-items .coupon-info .coupon-info-right {
  width: 28%;
  display: flex;
  flex-direction: column;
  color: #ff8284;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
}

.nav-img {
  width: 35rpx;
  height: 35rpx;
}

/* 购买数量 */

.product-acount {
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 35rpx;
  margin-left: 20rpx;
}

/* 商品列表1显示秒杀图标 */

.timeLimit1 {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
}
