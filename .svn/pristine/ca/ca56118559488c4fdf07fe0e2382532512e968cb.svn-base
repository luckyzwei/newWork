/* 地址添加页样式*/
 .container{
  height: 100%;
}
.form-list {
  position: relative;
  margin-bottom: 20rpx;
}

.form-list::before, .form-list::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(.5);
  background-color: #e3e3e3;
}
.form-list::before {
  top: 0;
}
.form-list::after {
  bottom: 0;
}
.form-item {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 30rpx 40rpx;
  background-color: #fff;
}
.form-item::before {
  content: '';
  display: block;
  position: absolute;
  z-index: 99;
  left: 0;
  top: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(.5);
  background-color: #e1e1e1;
}
.form-item-hd {
  width: 175rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.form-item-bd {
  flex: 1;
  height: 60rpx;
}
input, .input {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding: 0 15rpx;
}
switch {
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-right: -10rpx;
  margin-top: -16px;
  transform: scale(0.9);
  transform-origin: right center;
}
.input-placeholder {
  color: #ccc;
}
.save-btn {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
    color: #fff;
  position: fixed;
  bottom: 0rpx;
  border-radius: 0PX;

}
.address-bar {
  width:90%;
  height:80rpx;
  margin:5px auto;
  font-size:32rpx;
  text-align:center;
  line-height:80rpx;
  background-color:#DD2626;
  border-radius:6rpx;
  color:#fff;

}
.hidden {
  opacity: 0;
}
.message {
  position: fixed;
  top: 80%;
  left: 50%;
  width: 400rpx;
  height: 80rpx;
  margin-left: -200rpx;
  background-color: rgba(0, 0, 0, .75);
  border-radius: 20px;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  opacity: 0;
}
.fade-in {
  animation: fadeIn .3s forwards;
}
.area-item {
  line-height: 40px;
  text-align: center;
}
.distpicker {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 560rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  background-color: #fff;
}
.distpicker-btn {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fafafa;
  color: #586C94;
}
.distpicker-content {
  box-sizing: border-box;
  width: 100%;
  height: 560rpx;
  background-color: #fff;
}
.mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
}
/* 地区选择 */
.infoText{
    margin-top: 10rpx;
    padding-left: 66rpx;
    width: 100%;
    justify-content: center; 
    color: #000;
    align-items: center;
}

picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* ------------------显示层----------------------- */
.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-Index: 99999;
}
.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}
.animation-button {
  margin-top: 20rpx;
  top:20rpx;
  width: 400rpx;
  height: 100rpx; 
  line-height: 100rpx; 
  align-items:center;
}
text{
  color: #999999;
  display: inline-flex;  
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.left-bt{
  left: 30rpx;
}
.right-bt {
  right: 30rpx;
  color: green;
}
.line{
  display: block;
  position: fixed;
  height: 1rpx;
  width: 100%;
  margin-top: 89rpx; 
  background-color: #eeeeee;
}
