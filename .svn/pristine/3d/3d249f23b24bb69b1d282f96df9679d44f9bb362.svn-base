/*会员信息页面样式 */

.userInfo {
  width: 96%;
  margin: 0 auto;
}

.form-list {
  position: relative;
  margin-bottom: 20rpx;
}

.form-list .vip-title {
  display: block;
  width: 100%;
  line-height: 45px;
  border-bottom: 1px solid #eee;
}

.form-item {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 15rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.infoText {
  height: 60rpx;
  line-height: 60rpx;
}

.form-item-hd {
  /* width: 125rpx; */
  height: 60rpx;
  line-height: 60rpx;
}

.form-item-bd {
  flex: 1;
  height: 60rpx;
}

input, .input {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding: 0 15rpx;
}

.input-placeholder {
  color: #ccc;
}

/* 按钮激活样式 粉色背景 */

.save-btn {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  border-radius: 0PX;
  background: #ff8284;
}

/* 按钮禁用状态 */

.disable-btn {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  color: #aaa;
  border-radius: 0PX;
  background: #f8f8f8;
}

/* 去按钮自带边框 */

.disable-btn::after, .save-btn::after {
  border: none;
}

.address-bar {
  width: 90%;
  height: 80rpx;
  margin: 5px auto;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #dd2626;
  border-radius: 6rpx;
  color: #fff;
}

.hidden {
  opacity: 0;
}

.message {
  position: fixed;
  top: 80%;
  left: 50%;
  width: 400rpx;
  height: 80rpx;
  margin-left: -200rpx;
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 20px;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  opacity: 0;
}

.fade-in {
  animation: fadeIn 0.3s forwards;
}

.area-item {
  line-height: 40px;
  text-align: center;
}

.distpicker {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 560rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  background-color: #fff;
}

.distpicker-btn {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fafafa;
  color: #586c94;
}

.distpicker-content {
  box-sizing: border-box;
  width: 100%;
  height: 560rpx;
  background-color: #fff;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

