/* ------------------活动促销页面样式----------------*/
page{
  min-height: 100%;
}
/* 页面宽度 */

.saleProduct {
  width: 100%;
}

/* 促销专区 顶部轮播样式 */

.saleProduct .saleProduct-banner {
  width: 100%;
  height: 320rpx;
}

.saleProduct .saleProduct-banner swiper, .saleProduct-banner swiper-item {
  width: 100%;
  height: 320rpx;
}

.saleProduct .saleProduct-banner  .banner-img {
  width: 100%;
  height: 320rpx;
  display: block;
}

/* tab切换/商品列表 */

.saleProduct .sales-tab {
  width: 97%;
  margin: 0 auto;
}

/* Tab 默认 激活样式*/

.goodsDetail-nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: centter;
  font-size: 26rpx;
}

.goodsDetail-nav .nav-tab {
  width: 50%;
  text-align: center;
  line-height: 75rpx;
  background: #f8f8f8;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}

.goodsDetail-nav .active {
  color: #ff8284;
  background: #fff;
  /* border: 1px solid #ff8284; */
  border-bottom: none;
  font-weight: 600;
}

/* 商品列表*/

.pList-product {
  width: 99%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}

.pList-product  .product-price {
  width: 100%;
}
.pList-product .pList-items:first-child{
  border-top: none;
}
.pList-product .pList-items {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 0rpx auto 10rpx auto;
  font-size: 30rpx;
  padding: 15rpx 0;
  border: 1px solid #f8f8f8;
  border-radius: 10rpx;
}

.pList-product .pList-items .items-img {
  width: 175rpx;
  height: 175rpx;
}

.pList-product .pList-items .items-info {
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 15rpx;
}

/* 商品价格 */

.pList-product .pList-items .items-info .product-price {
  margin-top: 20rpx;
  width: 100%;
}

/* 商品标题 */

.pList-product .pList-items .items-info .info-title {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: left;
}

/* 商品列表2秒杀图标 */

.timeLimit2 {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
}

