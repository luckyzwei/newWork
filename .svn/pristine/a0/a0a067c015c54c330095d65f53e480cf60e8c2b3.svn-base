/* 团列表.wxss */

.group-list {
  width: 96%;
  padding: 0 2%;
}

/* 空列表 */

.empty {
  height: 100%;
  width: 100%;
  padding: 50% 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 22rpx;
}

.empty image {
  width: 220rpx;
  height: 220rpx;
}

/*非空订单 */

.order-list {
  width: 100%;
  margin: 0 auto;
  padding: 8rpx 0%;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.order-list   .header-sn {
  color: #888;
  line-height: 55rpx;
}

/* 拼团 订单状态 */

.header-sn > text {
  color: #ff8284;
  width: 73%;
  text-align: right;
}

.nav-right {
  width: 8px;
  height: 8px;
  margin-left: 20rpx;
}

.order-list  .item-footer {
  width: 97%;
  margin: 0 auto;
  padding-right: 12rpx;
  background-color: #fff;
  padding: 10rpx 0;
}

.order-list .item-footer .footer-sum {
  position: relative;
  display: block;
  height: 38px;
  overflow: hidden;
  font-size: 14px;
  font-weight: normal;
  text-align: right;
  line-height: 38px;
  clear: both;
}

.order-list .sum {
  color: #333;
  font-size: 13px;
  font-weight: normal;
}

.product-price {
  width: 100%;
}

.order-items {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 0rpx auto 0rpx auto;
  padding-bottom: 10rpx;
}

.order-items .items-img {
  width: 150rpx;
  height: 150rpx;
}

.order-items .items-info {
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 15rpx;
}

.order-items .items-info .product-price {
  /* margin-top: 35rpx; */
  width: 100%;
}

.order-items .items-info .info-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: left;
}

.order-items .items-info .cart1 {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}

.product-acount {
  color: #888;
}

/* 订单状态 */

.header-status {
  font-size: 25rpx;
}

.order-list .sum {
  color: #999;
  font-size: 13px;
  font-weight: normal;
}

/* 对商品进行操作 */

.footer-button {
  padding: 0rpx 15rpx;
  height: 45rpx;
  color: white;
  font-size: 24rpx;
  font-weight: normal;
  text-align: center;
  line-height: 45rpx;
  margin-left: 10rpx;
  border-radius: 6px;
}

/* 商品合计 */

.item-footer-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-bottom: 15rpx;
}

/* 拼团成员*/

.tuan-number {
}

/* 成员头像 */

.tuan-number .num-headimg {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1px solid#f8f8f8;
  margin-left: -10rpx;
}
