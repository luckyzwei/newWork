} */
/* 评论等级图标 */

.reviews-star .reviews-starIcon image {
  width: 50rpx;
  height: 50rpx;
}

.reviews-comment {
  width: 96%;
  margin: 0 auto;
  background-color: #fff;

}

/* 评论输入框 */

.reviews-comment textarea {
  width: 100%;
  height: 160rpx;
  text-indent: 20rpx;
  margin: 0 auto;
  border: 1px solid #eee;
  border-radius: 15rpx;
  padding-top: 15rpx;
}

/*评论提交按钮 */

.button {
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #ff8284;
  color: #fff;
  border: none;
  border-radius: 0;
}

/* 选中 */

.unselected {
  color: black;
}

.reviews-score {
  width: 110rpx;
  padding-left: 10rpx;
}
