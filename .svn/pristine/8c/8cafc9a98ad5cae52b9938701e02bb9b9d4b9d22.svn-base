<!--拼团列表-->
<view class='group-list global-pageFont'>
  <view class='empty' wx:if="{{}}">
    <image src='/images/empty.png'></image>
    <text>还没有参与拼团哦赶紧去促销专区立马参与~</text>
  </view>
  <view class='list-items'>
    <view class='order-unempty' wx:if="{{grouplist}}">
      <view class="order-list global-column2" wx:for="{{grouplist}}" wx:key="" wx:for-item="group">
        <view class="header-sn global-rowStart" bindtap='goDetail' data-order_id='{{group.group_id}}'>团订单详情
          <image src='/images/nav-right.png' class='nav-right'></image>
          <text>拼团失败,等待支付</text>
          <text wx:if="{{}}">拼团成功,等待发货</text>
          <text wx:if="{{}}">拼团成功,已发货</text>
          <text wx:if="{{}}">拼团成功,已完成</text>
        </view>
        <!-- 商品列表-->
        <view wx:for="{{group.product}}" wx:key="">
          <view class='order-items'>
            <image src='{{item.product_thumb}}' class="items-img"></image>
            <view class='items-info'>
              <text class="info-title">{{item.product_name}}</text>
              <view class='global-rowBtw  product-price'>
                <view class='global-rowStart'>
                  <text class='global-price'><text class='global-font22'>¥</text>{{item.product_price}}
                  </text>
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class="item-footer global-rowBtw">
          <!-- 拼团成员 -->
          <view class='tuan-number global-rowStart'>
            <image src='{{}}' class='num-headimg'></image>
          </view>
          <!-- 拼团 支付价格 -->
          <view class='item-footer-row'>
            <text class="sum">实付:￥{{group.group_amount}}</text>
            <view class="footer-button themeBg" wx:if='{{group.status==0}}' bindtap='payorder' data-order_id='{{group.group_id}}'> 支付订单 </view>
            <block wx:if="{{group.status==2}}">
              <view class="footer-button themeBg" bindtap='clickreceipt' data-order_id='{{group.group_id}}'> 确认收货</view>
              <view class="footer-button themeBg" bindtap="showTransport" data-order_id='{{group.group_id}}' data-statu="open">查看物流</view>
            </block>
            <block wx:if="{{group.status==5}}">
              <view class="footer-button themeBg" bindtap='comment' data-order_id='{{group.group_id}}'>去评价</view>
            </block>
            <block wx:if="{{group.status>0 && group.status<5}}">
              <view class="footer-button themeBg" bindtap='refundorder' data-order_id='{{group.group_id}}'> 退款</view>
            </block>
            <block wx:if="{{group.status==7}}">
              <view class="footer-button themeBg" bindtap='refundCancel' data-order_id='{{group.group_id}}'> 取消退款</view>
            </block>
          </view>
        </view>
      </view>
    </view>

  </view>
</view>