<!-- 添加地址页 -->
<view class="container global-pageFont">
  <form bindsubmit="savePersonInfo">
    <view class="form-list">
      <view class="form-item">
        <view class="form-item-hd">姓名：</view>
        <view class="form-item-bd">
          <input type="text" name="name" value="{{edit_address_info.name}}" placeholder="请输入收货人真实姓名" />
        </view>
      </view>
      <view class="form-item">
        <view class="form-item-hd">号码：</view>
        <view class="form-item-bd">
          <input type="number" placeholder-class="input-placeholder" name="tel" placeholder="请输入收货人手机号码" maxlength="11" value="{{edit_address_info.telephone}}" />

        </view>
      </view>
      <view class="form-item" bindtap="translate">
        <view class="form-item-hd">地区：</view>
        <view class="infoText">
          <block wx:if="{{provinceName[provinceSelIndex]}}">{{provinceName[provinceSelIndex]}} {{cityName[citySelIndex]}} {{districtName[districtSelIndex]}}
            <input type="text" name="province" value="{{provinceCode[provinceSelIndex]}}" hidden='true' placeholder-class='inputColor' />
            <input type="text" name="city" value="{{cityCode[citySelIndex]}}" hidden='true' placeholder-class='inputColor' />
            <input type="text" name="district" value="{{districtCode[districtSelIndex]}}" hidden='true' placeholder-class='inputColor' />
          </block>
          <block wx:else><span style="color: rgb(196, 189, 189);">请点击选择所在地区</span></block>
        </view>
      </view>
      <view class="form-item">
        <view class="form-item-hd">详细地址：</view>
        <view class="form-item-bd">
          <input type="text" placeholder-class="input-placeholder" name="address" value="{{edit_address_info.address}}" placeholder="请输入详细地址" />
        </view>
      </view>
    </view>
    <button formType="submit" class="save-btn themeBg">保 存</button>
  </form>
  <view class="animation-element-wrapper" animation="{{animation}}" style="visibility:{{show ? 'visible':'hidden'}}" bindtap="hiddenFloatView" data-id="444">
    <view class="animation-element" catchtap="nono">
      <text class="left-bt" catchtap="hiddenFloatView" data-id="555">取消</text>
      <text class="right-bt" catchtap="hiddenFloatView" data-id="666">确定</text>
      <view class="line"></view>

      <picker-view indicator-style="height: 50rpx;" value="{{value}}" bindchange="changeArea" catchtap="nono">
        <!--省-->
        <picker-view-column>
          <view wx:for="{{provinceName}}" wx:for-item="sheng" wx:key="pkey">
            {{sheng}}
          </view>
        </picker-view-column>
        <!--地级市-->
        <picker-view-column>
          <view wx:for="{{cityName}}" wx:key="ckey">
            {{item}}
          </view>
        </picker-view-column>
        <!--区县-->
        <picker-view-column>
          <view wx:for="{{districtName}}" wx:key="dkey">
            {{item}}
          </view>
        </picker-view-column>
      </picker-view>
    </view>
  </view>
</view>