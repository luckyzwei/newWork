<!--砍价列表.wxml-->
<view class='bargain'>
  <view class='empty' wx:if="{{killlist.length<1}}">
    <image src='/images/empty.png'></image>
    <text>还没有参与砍价活动哦赶紧去促销专区立马参与~</text>
  </view>
  <!-- 砍价商品详情 -->
  <view class='bargain-product global-rowStart' wx:for="{{killlist}}" wx:key="" wx:for-item="item">
    <image src='{{item.product_thumb}}' class='product-img' data-kill_product_id='{{item.kill_product_id}}' data-order_id='{{item.order_id}}' bindtap='goOn'></image>
    <view class='global-column2' data-kill_product_id='{{item.kill_product_id}}' data-order_id='{{item.order_id}}' bindtap='goOn'>
      <text class='bar-title global-title'>{{item.product_name}}</text>
      <text class='limit-time1'>已砍 <text class="themeColor"> {{item.killprice}}</text> 元</text>
      <text class="limit-time"><block wx:if="{{item.endtime!=0}}">{{item.endtime}} 后结束</block><block wx:else>已结束</block></text>
    </view>
    <!-- <view class='order-status'>
      <text>待发货</text>
    </view> -->
    <block wx:if="{{item.endtime!=0&&item.status==0}}">
      <view class='goOn margin' bindtap='goOn' data-order_id='{{item.order_id}}'>继续砍价</view>
    </block>
    <block wx:if="{{item.endtime!=0&&item.status==0}}">
      <view class='goOn' bindtap='payorder' data-order_id='{{item.order_id}}'>立即支付</view>
    </block>
    <block wx:if="{{item.status==2}}">
      <view class="goOn margin" bindtap='clickreceipt' data-order_id='{{item.order_id}}'> 确认收货</view>
      <view class="goOn gray" bindtap="showTransport" data-order_id='{{item.order_id}}' data-statu="open">查看物流</view>
    </block>
    <block wx:if="{{item.status==5}}">
      <view class="goOn" bindtap='comment' data-order_id='{{item.order_id}}'>去评价</view>
    </block>
    <block wx:if="{{item.status>0 && item.status<5}}">
      <view class="goOn" bindtap='refundorder' data-order_id='{{item.order_id}}'> 退款</view>
    </block>
    <block wx:if="{{item.status==7}}">
      <view class="goOn" bindtap='refundCancel' data-order_id='{{item.order_id}}'> 取消退款</view>
    </block>
  </view>

</view>
<!--物流信息弹出层  -->
<view class='global-mask' wx:if="{{showTransport}}" catchtouchmove="preventTouchMove" data-statu="close" bindtap="showTransport"></view>
<view class="drawer_box" wx:if="{{showTransport}}">
  <view class='drawer_info'>
    <image src="/images/delete.png" data-statu="close" bindtap="showTransport"></image>
  </view>
  <view class="drawer_content">
    <view class="drawer_title ">物流编号：{{express.LogisticCode}} </view>
  </view>
  <view class='waring'>如对物流信息产生疑问,请联系客服哟~~</view>
  <scroll-view scroll-y="true">
    <view class='wuliu-info' wx:for='{{express.Traces}}' wx:key="">
      <view class='getTime'>{{item.AcceptTime}}</view>
      <view class='getInfo'>{{item.AcceptStation}} </view>
    </view>
  </scroll-view>
</view>