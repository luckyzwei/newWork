/*全部商品展示  */

.task {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 35rpx 0;
  background: #fff;
}

/* 商品分类左右滑动 */

.scroll-x {
  display: inline-block;
  white-space: nowrap;
}

inline-block {
  display: inline-block;
}

.task-t {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.task-t image {
  width: 80rpx;
  height: 80rpx;
}

.tash-text {
  font-size: 24rpx;
  padding-left: 12rpx;
}

/*tgoods  */

.tgoods {
  width: 100%;
  border-top: 16rpx solid #efefef;
}

/*shouye商品详情  */

.goodDetail_c {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #efefef;
  padding: 20rpx 0;
}

.goodDetail_c_left {
  padding: 5rpx;
}

.goodDetail_c_left image {
  width: 205rpx;
  height: 270rpx;
}

.goodDetail_c_right {
  display: flex;
  flex-direction: column;
}

.goodDetail_c_right {
  color: black;
  padding: 5rpx;
}

.goodDetail_c_right_t1 {
  font-size: 28rpx;
}

.goodDetail_c_right_t2 {
  color: black;
  font-size: 30rpx;
}

.goodDetail_c_right_t3 {
  color: #ee4000;
  font-size: 25rpx;
}

.goodDetail_c_right_t4 {
  color: #c4c4c4;
  font-size: 25rpx;
  padding: 15rpx 0;
}

/*tab  */

.goods-tab-nav {
  display: inline-block;
  width: 33.33%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  text-align: center;
  color: grey;
  font-size: 26rpx;
}

.goods-tab-nav.on {
  color: #ee4000;
  font-size: 33rpx;
}

.navigatorTop {
  border-top: 15rpx solid #efefef;
}

